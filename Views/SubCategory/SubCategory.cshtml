@model Exercise1.Models.SubCategoryModel

@{
    ViewBag.Title = "SubCategory";
    SelectList list = ViewBag.CategoryNames;
}

<h2>Create a SubCategory</h2>

@using (Html.BeginForm("SubCategory", "SubCategory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>SubCategory</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.DropDownListFor(model => model.CategoryId, list, "--Select--")  
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}